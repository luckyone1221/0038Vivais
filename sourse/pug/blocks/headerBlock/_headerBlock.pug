mixin headerBlock()
	// start headerBlock
	+b.headerBlock#headerBlock&attributes(attributes)
		+e.slider
			.swiper-container.baner-slider-js
				.swiper-wrapper
					+headerSlide(1)
					+headerSlide(2, 'jpg')
					+headerSlide(1)
					+headerSlide(1)
			.container
				+b.sw-nav-row.row.justify-content-center
					.col-auto
						+b.baner-prev--js
							+icon('chevron-left')
					.col-auto
						+b.baner-next--js
							+icon('chevron-right')
				+b.baner-pugin--js.d-md-flex.d-none
	// end headerBlock

mixin headerSlide(imgNum, format='png')
	.swiper-slide
		.container
			+e.row.row.align-items-center
				.col-12.col-lg-6.col-xl-auto
					+e.img
						img.swiper-lazy(src="" data-src=`img/@2x/head-slide-${imgNum}.${format}` alt="")
				.col
					+e.content.text-center.text-lg-start
						h2 Новогодние скидки до 60%
						p Как и праздники - продолжаются.
						+e.btn(href="#") Перейти