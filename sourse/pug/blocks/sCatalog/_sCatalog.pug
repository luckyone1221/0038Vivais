mixin sCatalog(data)
	// start sCatalog
	+b.SECTION.sCatalog.section#sCatalog&attributes(attributes)
		.container
			+b.section-title.text-center.text-lg-start
				h2 Каталог товаров
			.row.row--def
				+sCatalogItem(1, 'Сладкие наборы', '27 товаров')
				+sCatalogItem(2, 'Наборы с электроникой ', '32 товаров')
				+sCatalogItem(3, 'Печатная продукция', '15 товаров')
				+sCatalogItem(4, 'Наборы с алкоголем ', '6 товаров')
				+sCatalogItem(5, 'Ежедневники', '27 товаров')
				+sCatalogItem(6, 'Блокноты', '32 товаров')
				+sCatalogItem(7, 'Одежда', '15 товаров')
				+sCatalogItem(8, 'Аксессуары', '6 товаров')
	// end sCatalog

mixin sCatalogItem(imgNum, title, amount)
	.col-6.col-lg-3
		+e.item.text-center(href='#')
			+e.img
				img(loading="lazy" src=`img/@2x/catalog-${imgNum}.jpg` alt="")
			+e.title=title
			+e.amount=amount